<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_trainingDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Training Day"
        android:textColor="@color/colorDialogs"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_restDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDialogs"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Rest Day"
        android:textSize="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/circle_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:text="3882\nCal"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="30sp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/circle_tapToCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textview"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Tap\nHere"
        android:textColor="@color/colorDialogs"
        android:textSize="30sp"
        android:translationZ="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/circle_fats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_macros_fats_textview"
        android:gravity="center|bottom"
        android:padding="4dp"
        android:rotation="45"
        android:text="F"
        android:textStyle="bold"
        android:textColor="@color/colorActivityBackground"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:translationY="-85dp"
        android:translationZ="90dp"
        android:translationX="-30dp"
        app:layout_constraintEnd_toEndOf="@id/circle_calories"
        app:layout_constraintStart_toStartOf="@id/circle_calories"
        app:layout_constraintTop_toBottomOf="@id/circle_calories" />

    <TextView
        android:id="@+id/circle_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_macros_carbs_textview"
        android:gravity="center|bottom"
        android:padding="4dp"
        android:rotation="-45"
        android:text="C"
        android:translationX="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorActivityBackground"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:translationY="-85dp"
        android:translationZ="70dp"
        app:layout_constraintEnd_toEndOf="@id/circle_calories"
        app:layout_constraintStart_toStartOf="@id/circle_calories"
        app:layout_constraintTop_toBottomOf="@id/circle_calories" />

    <TextView
        android:id="@+id/circle_proteins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_macros_proteins_textview"
        android:gravity="center|top"
        android:padding="4dp"
        android:text="P"
        android:textStyle="bold"
        android:textColor="@color/colorActivityBackground"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:translationY="70dp"
        android:translationZ="70dp"
        app:layout_constraintBottom_toTopOf="@id/circle_calories"
        app:layout_constraintEnd_toEndOf="@id/circle_calories"
        app:layout_constraintStart_toStartOf="@id/circle_calories" />
    <ImageButton
        android:id="@+id/macrosSettings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/macros_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"/>

    <ImageButton
        android:id="@+id/button_History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_history_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>